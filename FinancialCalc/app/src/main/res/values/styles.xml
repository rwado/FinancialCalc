<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextBlue">
        <item name="android:background">@drawable/ripple_efect_blue</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextBlueBordered">
        <item name="android:background">@drawable/textview_background</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonIncDec">
        <item name="android:background">@drawable/ripple_effect_white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SeekBarStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:background">@drawable/spinner_layout</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RadioStyle">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>




    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
