<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="5dp"
            tools:layout_editor_absoluteY="5dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    style="@style/TextBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:text="@string/amount" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonAmountSub"
                    style="@style/ButtonIncDec"
                    android:layout_width="@dimen/width_medium"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:text="-" />

                <EditText
                    android:id="@+id/editAmount"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="100"
                    android:inputType="number"
                    android:text="100000"
                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/spinnerCurrency"
                    style="@style/SpinnerStyle"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/buttonAmountAdd"
                    style="@style/ButtonIncDec"
                    android:layout_width="@dimen/width_medium"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:text="+" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/seekBarAmount"
                    style="@style/SeekBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="1000000"
                    android:progress="100000"
                    android:progressDrawable="@drawable/seek_bar"
                    android:thumb="@drawable/seek_thumb" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    style="@style/TextBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:text="@string/interest" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonInterestSub"
                    style="@style/ButtonIncDec"
                    android:layout_width="@dimen/width_medium"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:text="-" />

                <EditText
                    android:id="@+id/editInterest"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="100"
                    android:inputType="numberDecimal"
                    android:text="2.0"

                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/spinnerCurrency1"
                    style="@style/EditTextStyle"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="%" />

                <Button
                    android:id="@+id/buttonInterestAdd"
                    style="@style/ButtonIncDec"
                    android:layout_width="@dimen/width_medium"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:text="+" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/seekBarInterest"
                    style="@style/SeekBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="200"
                    android:progress="20"
                    android:progressDrawable="@drawable/seek_bar"
                    android:thumb="@drawable/seek_thumb" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button141"
                    style="@style/TextBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:text="@string/commision" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonCommisionSub"
                    style="@style/ButtonIncDec"
                    android:layout_width="@dimen/width_medium"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:text="-" />

                <EditText
                    android:id="@+id/editCommision"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="100"
                    android:inputType="numberDecimal"
                    android:text="2.0"

                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/spinnerCurrency11"
                    style="@style/EditTextStyle"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="%" />

                <Button
                    android:id="@+id/buttonCommisionAdd"
                    style="@style/ButtonIncDec"
                    android:layout_width="@dimen/width_medium"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:text="+" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/seekBarCommision"
                    style="@style/SeekBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="200"
                    android:progress="20"
                    android:progressDrawable="@drawable/seek_bar"
                    android:thumb="@drawable/seek_thumb" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button14"
                    style="@style/TextBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:text="@string/period" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonPeriodSub"
                    style="@style/ButtonIncDec"
                    android:layout_width="@dimen/width_medium"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:text="-" />

                <EditText
                    android:id="@+id/editPeriod"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="100"
                    android:inputType="number"
                    android:text="25"

                    android:textColor="#000000" />

                <Spinner
                    android:id="@+id/spinnerPeriodType"
                    style="@style/SpinnerStyle"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/buttonPeriodAdd"
                    style="@style/ButtonIncDec"
                    android:layout_width="@dimen/width_medium"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:text="+" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/seekBarPeriod"
                    style="@style/SeekBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="50"
                    android:progress="25"
                    android:progressDrawable="@drawable/seek_bar"
                    android:thumb="@drawable/seek_thumb" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button144"
                    style="@style/TextBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_medium"
                    android:layout_weight="1"
                    android:text="@string/installment_type" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RadioGroup
                    android:id="@+id/radioLoansRateType"
                    style="@style/RadioStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_medium"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:checked="true"
                        android:text="@string/equal" />

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/decreasing" />
                </RadioGroup>
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/buttonCalculate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="#99CCFF"
            android:text="@string/calculate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>